 <!-- Navigation-->
  <%= render "shared/header" %>

<div class="registration-main">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <p class="personal"><ins>個人情報</ins></p>

    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">ニックネーム</label>
      <%= f.text_field :nickname, autofocus: true,placeholder:"アカウント名を入力してください" ,class:"form-control" ,id:"formGroupExampleInput"%>
    </div>
    <div class="name-form">
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">苗字</label>
        <%= f.text_field :first_name, autofocus: true,placeholder:"例) 山田" ,class:"form-control" ,id:"formGroupExampleInput"%>
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">氏名</label>
        <%= f.text_field :last_name, autofocus: true,placeholder:"例) 太郎" ,class:"form-control" ,id:"formGroupExampleInput"%>
      </div>
    </div>

    <div class="name-form">
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">苗字カナ</label>
        <%= f.text_field :first_name_kana, autofocus: true,placeholder:"例) ヤマダ" ,class:"form-control" ,id:"formGroupExampleInput"%>
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">氏名カナ</label>
        <%= f.text_field :last_name_kana, autofocus: true,placeholder:"例) タロウ" ,class:"form-control" ,id:"formGroupExampleInput"%>
      </div>
    </div>

    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">誕生日</label>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birth_date,
                      {use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'},
                      {class:"form-select form-select-sm", 
                      id:"birth-date"}),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>

    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">性別</label>
      <div class="form-check">
        <%= f.radio_button :gender, '男', class:"form-check-input" ,id:"flexRadioDefault1",checked: true%>
        <label class="form-check-label" for="flexRadioDefault1">
          男
        </label>
      </div>
      <div class="form-check">
        <%= f.radio_button :gender, '女', class:"form-check-input" ,id:"flexRadioDefault2"%>
        <label class="form-check-label" for="flexRadioDefault2">
          女
        </label>
      </div>
      <div class="form-check">
        <%= f.radio_button :gender, 'その他', class:"form-check-input" ,id:"flexRadioDefault3" %>
        <label class="form-check-label" for="flexRadioDefault3">
          その他
        </label>
      </div>
      <div class="form-check">
        <%= f.radio_button :gender,  '回答なし', class:"form-check-input" ,id:"flexRadioDefault4" %>
        <label class="form-check-label" for="flexRadioDefault4">
          回答しない
        </label>
      </div>
    </div>

    <p class="account"><ins>アカウント情報</ins></p>
    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレスを入力してください" ,class:"form-control" ,id:"formGroupExampleInput"%>
          <div class="valid-feedback">
      Looks good!
    </div>
    </div>

    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">パスワード</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",placeholder:"半角英数字で入力してください" ,class:"form-control" ,id:"formGroupExampleInput" %>
    </div>

    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label">確認用パスワード</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"同じパスワードを入力して下さい" ,class:"form-control" ,id:"formGroupExampleInput" %>
    </div>

    <div class='register-btn'>
      <div class="btn btn-primary" >
        <%= f.submit "Sign up",class: "sign-btn" %>
      </div>
    </div>
  <% end %>
</div>
